@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
    ViewData["UseFullWidth"] = true;
}

@section Styles {
    <!-- Google Fonts: Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/landing.css" asp-append-version="true" />
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-content">
        <div class="hero-text">
            <h1 class="hero-title">Unlock Your Potential with Modern Learning</h1>
            <p class="hero-description">
                Join thousands of students and instructors on the most intuitive learning management platform.
                Master new skills with swiss-precision design and focus.
            </p>
            <div class="hero-actions">
                <a href="#" class="btn-cta btn-primary-cta">Browse Courses</a>
                <a href="/Auth/Login" class="btn-cta btn-secondary-cta">Log In</a>
            </div>
        </div>
        <div class="hero-visual">
            <div class="hero-shape"></div>
            <!-- Placeholder for Hero Image - would be replaced by actual asset -->
            <img src="https://images.unsplash.com/photo-1522202176988-66273c2fd55f?q=80&w=2071&auto=format&fit=crop" class="hero-image" alt="Students learning together" />
        </div>
    </div>
</section>

<!-- Stats Strip -->
<div class="stats-section">
    <div class="stats-grid">
        <div class="stat-item">
            <h3>15k+</h3>
            <p>Active Students</p>
        </div>
        <div class="stat-item">
            <h3>1,200+</h3>
            <p>Video Courses</p>
        </div>
        <div class="stat-item">
            <h3>850+</h3>
            <p>Expert Instructors</p>
        </div>
        <div class="stat-item">
            <h3>4.9/5</h3>
            <p>Student Satisfaction</p>
        </div>
    </div>
</div>

<!-- Features Grid -->
<section class="features-section">
    <h2 class="section-title">Why Choose Our Platform</h2>
    <p class="section-subtitle">We focus on the details so you can focus on learning.</p>

    <div class="features-grid">
        <div class="feature-card">
            <div class="feature-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M22 12h-4l-3 9L9 3l-3 9H2"/>
                </svg>
            </div>
            <h3>Interactive Learning</h3>
            <p>Engage with dynamic content, quizzes, and hands-on projects that help you retain knowledge better.</p>
        </div>

        <div class="feature-card">
            <div class="feature-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"/>
                    <path d="M12 6v6l4 2"/>
                </svg>
            </div>
            <h3>Self-Paced Freedom</h3>
            <p>Learn at your own speed. Lifetime access to courses means you can revisit materials anytime.</p>
        </div>

        <div class="feature-card">
            <div class="feature-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
                </svg>
            </div>
            <h3>Expert Instructors</h3>
            <p>Learn from industry professionals who bring real-world experience to every lesson.</p>
        </div>
    </div>
</section>

<!-- Trending Courses (Bento Grid) -->
<section class="courses-section">
    <div class="courses-container">
        <h2 class="section-title" style="text-align: left; margin-bottom: 2rem;">Trending Now</h2>
        <div class="courses-grid">
            <div class="course-card large" style="background-image: url('https://images.unsplash.com/photo-1542831371-29b0f74f9713?q=80&w=2070&auto=format&fit=crop')">
                <div class="course-overlay">
                    <span class="course-tag">Science</span>
                    <h4>Advanced Molecular Biology</h4>
                </div>
            </div>
            <div class="course-card" style="background-image: url('https://images.unsplash.com/photo-1587620962725-abab7fe55159?q=80&w=2031&auto=format&fit=crop')">
                <div class="course-overlay">
                    <span class="course-tag">Technology</span>
                    <h4>Web Development Bootcamp</h4>
                </div>
            </div>
            <div class="course-card" style="background-image: url('https://images.unsplash.com/photo-1554224155-8d04cb21cd6c?q=80&w=2070&auto=format&fit=crop')">
                <div class="course-overlay">
                    <span class="course-tag">Business</span>
                    <h4>Financial Analytics 101</h4>
                </div>
            </div>
            <div class="course-card" style="background-image: url('https://images.unsplash.com/photo-1664575602276-acd073f104c1?q=80&w=2070&auto=format&fit=crop')">
                <div class="course-overlay">
                    <span class="course-tag">Design</span>
                    <h4>UI/UX Design Principles</h4>
                </div>
            </div>
            <div class="course-card" style="background-image: url('https://images.unsplash.com/photo-1516321318423-f06f85e504b3?q=80&w=2070&auto=format&fit=crop')">
                <div class="course-overlay">
                    <span class="course-tag">Marketing</span>
                    <h4>Digital Marketing Strategy</h4>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section">
    <div class="cta-content">
        <h2>Ready to start your journey?</h2>
        <p>Join our community of lifelong learners and transform your career today.</p>
        <a href="#" class="btn-cta btn-primary-cta">Get Started for Free</a>
    </div>
</section>
